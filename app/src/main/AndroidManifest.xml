<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidlutta.galactic_ninja.cryptowatch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bitcoin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Features_Activity" />
        <activity android:name=".Search_Activity" />
        <activity android:name=".Results_Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidlutta.galactic_ninja.cryptowatch.Search_Activity" />
        </activity>
        <activity android:name=".Login_Activity" />
        <activity android:name=".FeedActivity" />
        <activity android:name=".CurrencyDetailsActivity"></activity>
    </application>

</manifest>